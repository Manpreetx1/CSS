<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.assignonejava.MainController">
    <BarChart fx:id="barChart">
        <xAxis>
            <CategoryAxis label="Category"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Value"/>
        </yAxis>
    </BarChart>
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="reviewColumn" text="Review"/>
            <TableColumn fx:id="delayColumn" text="Delay"/>
            <TableColumn fx:id="priceColumn" text="Price"/>
            <TableColumn fx:id="comfortColumn" text="Comfort"/>
            <TableColumn fx:id="complaintsColumn" text="Complaints"/>
        </columns>
    </TableView>
    <Button text="Load Data" onAction="#loadData"/>
</VBox>
